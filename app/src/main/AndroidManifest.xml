            android:name="com.hoymm.muca.damian.morsecodeconverter2.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hoymm.muca.damian.morsecodeconverter2.ConvertToScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hoymm.muca.damian.morsecodeconverter2.ConvertToFlashlight"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hoymm.muca.damian.morsecodeconverter2.ConvertToText"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.hoymm.muca.damian.morsecodeconverter2.HoymmLogoActivity"></activity>
    </application>

</manifest>
